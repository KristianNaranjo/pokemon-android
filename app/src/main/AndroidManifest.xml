<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.naranjo.kristian.pokemonandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PokemonApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon_poke_ball"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_poke_ball"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.naranjo.kristian.pokemonandroid.ui.pokedex.PokedexActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.details.PokemonDetailsActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>